<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Spotify Clone</title>
    <style>
        body, html {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }
    
        body {
            display: flex;
            height: 100vh;
            background-color: #121212;
            color: #fff;
        }
    
        .sidebar {
            width: 230px;
            background-color: #040404;
            padding: 20px;
            box-sizing: border-box;
            display: flex;
            flex-direction: column;
        }
    
        .sidebar h1 {
            font-size: 22px;
            margin-bottom: 20px;
            color: #1DB954;
        }
    
        .sidebar ul {
            list-style: none;
            padding: 0;
        }
    
        .sidebar li {
            padding: 10px 0;
            cursor: pointer;
        }
    
        .sidebar li:hover {
            color: #1DB954;
        }
    
        .sidebar button {
            background-color: #1DB954;
            border: none;
            color: white;
            cursor: pointer;
            padding: 10px 15px;
            margin-top: 20px;
            border-radius: 5px;
            font-size: 16px;
            transition: background-color 0.3s;
        }
    
        .sidebar button:hover {
            background-color: #1ed760;
        }
    
        .header {
            display: flex;
            align-items: center;
            background-color: #282828;
            padding: 10px;
            text-align: center;
            position: sticky;
            top: 0;
        }
    
        .add-music-btn {
            background-color: #1DB954; 
            border: none; 
            color: white; 
            padding: 8px 15px; 
            border-radius: 20px; 
            cursor: pointer;
            font-size: 16px; 
            transition: background-color 0.3s; 
            margin-left: 20px; 
        }
    
        .add-music-btn:hover {
            background-color: #1ed760; 
        }
        .header .search-bar {
            width: 300px;
            display: flex;
            align-items: center;
            background-color: #121212;
            border-radius: 20px;
            padding: 5px 10px;
        }
    
        .header .search-bar input[type="text"] {
            background-color: transparent;
            border: none;
            color: #fff;
            outline: none;
            width: 100%;
            padding: 5px 10px;
            font-size: 16px;
        }
    
        .header .search-bar input[type="text"]::placeholder {
            color: #b3b3b3;
        }
    
        .header .search-bar i {
            color: #b3b3b3;
        }
    
        .header .search-bar button {
            background-color: #1DB954;
            border: none;
            color: white;
            cursor: pointer;
            padding: 8px 15px;
            margin-left: 10px;
            border-radius: 20px;
            font-size: 16px;
            transition: background-color 0.3s;
        }
    
        .header .search-bar button:hover {
            background-color: #1ed760;
        }
    
        .main-content {
            flex-grow: 1;
            overflow-y: auto;
            display: flex;
            flex-direction: column;
        }
    
        .content-section {
            padding: 20px;
        }
    
        .content-section h2 {
            margin-top: 0;
        }
    
        .content-section .playlist {
            display: flex;
            flex-wrap: wrap;
        }
    
        .content-section .playlist .card {
            background-color: #181818;
            border-radius: 10px;
            width: 150px;
            margin: 10px;
            padding: 10px;
            text-align: center;
            transition: background-color 0.3s;
        }
    
        .content-section .playlist .card:hover {
            background-color: #a0a6ac;
            opacity: 0.8;
        }
    
        .content-section .playlist .card img {
            width: 100%;
            height: 150px; 
            object-fit: cover;
            border-radius: 10px; 
        }
    
        .play-button {
            display: inline-block; 
            background-color: #1DB954; 
            color: #fff;
            padding: 10px 15px; 
            border: none; 
            border-radius: 5px; 
            text-decoration: none; 
            font-size: 16px; 
            transition: background-color 0.3s;
        }
    
        .play-button:hover {
            background-color: #1ed760; 
        }
    
        .footer {
            background-color: #282828;
            padding: 10px;
            text-align: center;
            position: absolute; 
            bottom: 0; 
            width: 1350px;
            height: 50px;
        }
    
        .modal {
            display: none; 
            position: fixed; 
            z-index: 1; 
            left: 0;
            top: 0;
            width: 100%; 
            height: 100%;
            overflow: auto; 
            background-color: rgba(0,0,0,0.4);
            padding-top: 60px;
        }
    
        .modal-content {
            background-color: #181818;
            margin: 5% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 50%; 
            border-radius: 10px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        }
    
        .modal-content input[type="text"], .modal-content input[type="file"] {
            width: calc(100% - 20px);
            padding: 10px;
            margin: 10px 0;
            border-radius: 5px;
            border: 1px solid #ccc;
        }
    
        .modal-content button {
            background-color: #1DB954;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }
    
        .modal-content button:hover {
            background-color: #1ed760;
        }
    
        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }
    
        .close:hover,
        .close:focus {
            color: white;
            text-decoration: none;
            cursor: pointer;
        }
    </style>
</head>
<body>

    <div class="sidebar">
        <h1>Spotify</h1>
        <ul>
            <li>Home</li>
            <li>Your Library</li>
            <li>Recently Played</li>
            <li>Create Playlist</li>
        </ul>
    </div>

    <div class="main-content">
        <div class="header">
            <div class="search-bar">
                <i class="fas fa-search"></i>
                <input type="text" id="searchInput" placeholder="Search for songs, artists, etc.">
                <button id="searchButton"></button>
            </div>
            <button id="openModalBtn" class="add-music-btn">Add Music</button>
        </div>

        <div class="content-section">
            <h2>Featured Playlists</h2>
            <div class="playlist" id="playlist">
                <% songs.forEach(song => { %>
                    <div class="card" data-title="<%= song.title %>" data-artist="<%= song.artist %>">
                        <img src="<%= song.cover_image %>" alt="<%= song.title %> cover" class="cover-image">
                        <div class="title">
                            <h4><%= song.title %></h4>
                        </div>
                        <div class="artist">
                            <p><%= song.artist %></p>
                        </div>
                        <a href="/song/<%= song.id %>" class="play-button">Play</a>
                    </div>
                <% }); %>
            </div>
        </div>
        
        <div class="footer">
            <p>Â© 2024 Spotify | All Rights Reserved</p>
        </div>
    </div>

    <div id="myModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2>Add New Music</h2>
            <form id="musicForm" action="/upload" method="POST" enctype="multipart/form-data">
                <div>
                    <label for="title">Title:</label>
                    <input type="text" id="title" name="title" required>
                </div>
                <div>
                    <label for="artist">Artist:</label>
                    <input type="text" id="artist" name="artist" required>
                </div>
                <div>
                    <label for="artist">Lyrics:(Opitonal)</label>
                    <input type="text" id="lyrics" name="lyrics">
                </div>
                <div>
                    <label for="musicFile">Upload Music File:</label>
                    <input type="file" id="musicFile" name="songFile" accept="audio/*" required>
                </div>
                <div>
                    <label for="coverImage">Upload Cover Image (Optional):</label>
                    <input type="file" id="coverImage" name="imageFile" accept="image/*">
                </div>
                <div>
                    <button type="submit">Add Music</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        var modal = document.getElementById("myModal");
        var btn = document.getElementById("openModalBtn");
        var span = document.getElementsByClassName("close")[0];

        btn.onclick = function() {
            modal.style.display = "block";
        }
        span.onclick = function() {
            modal.style.display = "none";
        }
        window.onclick = function(event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }

        const searchInput = document.getElementById('searchInput');
        const searchButton = document.getElementById('searchButton');
        const playlist = document.getElementById('playlist');
        const cards = playlist.getElementsByClassName('card');

        function filterSongs() {
            const query = searchInput.value.toLowerCase();

 
            Array.from(cards).forEach(card => {
                const title = card.getAttribute('data-title').toLowerCase();
                const artist = card.getAttribute('data-artist').toLowerCase();
                
                if (title.includes(query) || artist.includes(query)) {
                    card.style.display = 'block'; 
                } else {
                    card.style.display = 'none'; 
                }
            });
        }

        searchButton.addEventListener('click', filterSongs);
        searchInput.addEventListener('input', filterSongs);
    </script>
</body>
</html>



